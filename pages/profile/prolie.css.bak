/* SkeletonLoader.module.css */
.skeletonContainer {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 600px;
    margin: 20px auto;
  }
  
  .avatarSkeleton {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: rgba(200, 200, 200, 0.3);
    margin-bottom: 20px;
  }
  
  .usernameSkeleton {
    width: 200px;
    height: 30px;
    background: rgba(200, 200, 200, 0.3);
    margin-bottom: 10px;
  }
  
  .followStatsSkeleton {
    width: 150px;
    height: 20px;
    background: rgba(200, 200, 200, 0.3);
    margin-bottom: 20px;
  }
  
  .buttonSkeleton {
    width: 120px;
    height: 40px;
    background: rgba(200, 200, 200, 0.3);
    border-radius: 20px;
    margin-bottom: 20px;
  }
  
  .postsTitleSkeleton {
    width: 150px;
    height: 25px;
    background: rgba(200, 200, 200, 0.3);
    margin-bottom: 15px;
  }
  
  .postsGridSkeleton {
    display: flex;
    flex-direction: column;
    gap: 10px;
    width: 100%;
  }
  
  .postSkeleton {
    width: 100%;
    height: 180px;
    background: rgba(200, 200, 200, 0.3);
    border-radius: 5px;
  }
  